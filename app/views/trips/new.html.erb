<div class="container">
  <div class="well col-md-offset-2 col-md-8 text-center">
    <h1>Plan your trip to <%=@park.name%> National Park</h1>

    <%= form_for([@park, @trip], html: {class: "form-horizontal"}) do |f| %>


      <div class="form-group">
        <label class="control-label col-md-3">
          <%= f.label :start_date, "Planned Start Date" %>
        </label>
          <div class="form-controls col-md-5">
          <%= f.date_select :start_date, :class =>'form-control', :order => [ :month, :day, :year] %>
          </div>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3">
          <%= f.label :end_date, "Planned End Date" %>
        </label>
          <div class="form-controls col-md-5">
          <%= f.date_select :end_date, :class =>'form-control', :order => [ :month, :day, :year] %>
          </div>
          <% if alert %>
            <%= alert[0] %>
          <% end %>
      </div>

      <div class="form-group">
        <label class="control-label col-md-3">
          <%= f.label :notes %>
        </label>
          <div class="form-controls col-md-5">
          <%= f.text_field :notes, :class =>'form-control' %>
          </div>
      </div>

      <div class="form-group">
        <div class="actions">
          <div class="col-md-offset-5 col-md-4">
            <%= link_to 'Cancel', park_path(@park), class:"btn btn-default" %>
            <input class="btn btn-primary"<%= f.submit %>
          </div>
        </div>
      </div>
      <% end %>

  </div>
</div>
